extends auth

block auth
  h2.title Signin
  form.signin.form-horizontal(action="/users/session", method="post")
    div.form-group.row
      label.col-lg-2.control-label(for='email') Email
      .col-lg-3
        input.form-control#email(type='text', name="email", placeholder='Email' required)
    div.form-group.row
      label.col-lg-2.control-label(for='password') Password
      .col-lg-3
        input.form-control#password(type='password', name="password", placeholder='Password' required)
    .input-group
      .controls
        button.btn.btn-primary(type='submit') Sign in
    a.label_href(data-ng-href="/#!/account/password_reset") Forgot password?